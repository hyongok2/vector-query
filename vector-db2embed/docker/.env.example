# Environment Configuration for Vector DB Embeddings

# Application Settings
APP_NAME=vector-db-embeddings
APP_VERSION=1.0.0
ENVIRONMENT=production

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# Qdrant Configuration (existing external instance)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Database Configuration (Oracle)
DB_HOST=localhost
DB_PORT=1521
DB_SERVICE_NAME=XEPDB1
DB_USERNAME=system
DB_PASSWORD=oracle

# Model Configuration
DEFAULT_MODEL=mE5-base
MODEL_CACHE_DIR=/app/models
MODEL_CONFIG_PATH=/app/config/models_config.yaml

# Security Settings
ALLOWED_ORIGINS=*
ENABLE_CORS=true
MAX_UPLOAD_SIZE=200MB

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Settings
MAX_WORKERS=4
WORKER_TIMEOUT=300
BATCH_SIZE=64
MAX_MEMORY_USAGE=4GB

# Development Settings (set to false in production)
DEBUG=false
RELOAD=false

# SSL Settings (for production)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem